<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="400" prefWidth="600"
   style="-fx-background-color: white; -fx-background-radius: 32px; -fx-border-radius: 32px;"
   xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="hftm.rubi.FragenController">
   <children>
      <Label layoutX="70.0" layoutY="40" text="Wähle eine Kategorie für den Quiz!">
         <font>
            <Font name="Arial" size="30.0" />
         </font>
      </Label>
      <Button fx:id="Kategorie1" layoutX="50.0" layoutY="150.0" text="Kategorie1"
         onAction="#switchToSecondary"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
         minWidth="230" minHeight="50" maxWidth="200"  wrapText="true">
         <font>
            <Font name="Arial" size="18.0" />
         </font>
      </Button>
      <Button fx:id="Kategorie2" layoutX="330.0" layoutY="150.0" text="Kategorie2"
         onAction="#switchToSecondary"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
         textFill="WHITE" minWidth="230" minHeight="50"  wrapText="true">
         <font>
            <Font name="Arial" size="18.0"/>
         </font>
      </Button>
      <Button fx:id="Kategorie3" layoutX="50.0" layoutY="250.0" text="Kategorie3"
         onAction="#switchToSecondary"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
         textFill="WHITE" minWidth="230" minHeight="50" wrapText="true">
         <font>
            <Font name="Arial" size="18.0"/>
         </font>
      </Button>
      <Button fx:id="Kategorie4" layoutX="330.0" layoutY="250.0" text="Kategorie4"
         onAction="#switchToSecondary"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
         textFill="WHITE" minWidth="230" minHeight="50"  wrapText="true">
         <font>
            <Font name="Arial" size="18.0"/>
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="460.0" layoutY="350.0" text="Beenden"
         onAction="#handleExitButtonAction"
         style="-fx-background-color:#B22222; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
         textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>