<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600"
    style="-fx-background-color: white; -fx-background-radius: 32px; -fx-border-radius: 32px;"
    xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="hftm.rubi.ErgebnisController">
    <children>
        <Label fx:id="ergebnisLabel" layoutX="95" layoutY="40" prefWidth="400" prefHeight="50"
            text="Deine Ergebnisse werden hier angezeigt" wrapText="true">
            <font>
                <Font name="Arial" size="20.0" />
            </font>
        </Label>
        <Button fx:id="zurueckButton" layoutX="310.0" layoutY="350.0"
            text="Start Quiz" onAction="#switchToPrimary"
            style="-fx-background-color: #ADFF2F; -fx-background-radius: 32px; -fx-border-radius: 32px;"
            textFill="WHITE">
            <font>
                <Font name="Arial" size="20.0" />
            </font>
        </Button>
        <Button fx:id="exitButton" layoutX="460.0" layoutY="350.0" text="Beenden"
            onAction="#handleExitButtonAction"
            style="-fx-background-color:#B22222; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
            textFill="WHITE">
            <font>
                <Font name="Arial" size="20.0" />
            </font>
        </Button>
    </children>
</AnchorPane>