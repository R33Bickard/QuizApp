<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hftm.rubi.FragenController">
   <children>
      <Label text="Wähle eine Kategorie für den Quiz!" />
      <Button fx:id="Kategorie1" text="Kategorie1" onAction="#switchToSecondary"></Button>
      <Button fx:id="Kategorie2" text="Kategorie2" onAction="#switchToSecondary"></Button>
      <Button fx:id="Kategorie3" text="Kategorie3" onAction="#switchToSecondary"></Button>
      <Button fx:id="Kategorie4" text="Kategorie4" onAction="#switchToSecondary"></Button>
      <Button fx:id="primaryButton" text="Quiz" onAction="#switchToSecondary"/>
      <Button fx:id="exitButton" text="Beenden" onAction="#handleExitButtonAction"/>
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
