<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hftm.rubi.QuizController">
    <children>
        <Label text="Starte deinen Quiz" />
        <Button fx:id="secondaryButton" text="Ergebnisse" onAction="#switchToThird" />
        <Button fx:id="startQuiz" text="Start" onAction="#start"></Button>
        <Button fx:id="exitButton" text="Beenden" onAction="#handleExitButtonAction"/>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
