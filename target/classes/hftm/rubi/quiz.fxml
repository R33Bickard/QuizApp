<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="hftm.rubi.QuizController">
    <children>
        <Label text="Starte deinen Quiz" />
        <Button fx:id="startQuiz" onAction="#start" text="Start" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0">
         <children>
            <ButtonBar prefHeight="40.0" prefWidth="200.0" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0">
               <buttons>
                    <Button fx:id="secondaryButton" onAction="#switchToThird" text="Ergebnisse" />
                    <Button fx:id="exitButton" onAction="#handleExitButtonAction" text="Beenden" />
               </buttons>
            </ButtonBar>
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
      </AnchorPane>
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
