<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400" prefWidth="600"
   style="-fx-background-color: white; -fx-background-radius: 32px; -fx-border-radius: 32px;"
   xmlns="http://javafx.com/javafx/11.0.14-internal" xmlns:fx="http://javafx.com/fxml/1"
   fx:controller="hftm.rubi.QuizController">
   <children>
      <Label fx:id="frageLabel" layoutX="20.0" layoutY="50" text="Frage kommt hier" wrapText="true"
         maxWidth="560">
         <font>
            <Font name="Arial" size="24.0" />
         </font>
      </Label>
      <Button fx:id="Auswahl1" layoutX="20.0" layoutY="150.0" text="Auswahl1"
         onAction="#antwortAuswaehlen"
         style="-fx-background-color:#6495ED; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
         minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" wrapText="true">
         <font>
            <Font name="Arial" size="16.0" />
         </font>
      </Button>
      <Button fx:id="Auswahl2" layoutX="330.0" layoutY="150.0" text="Auswahl2"
         onAction="#antwortAuswaehlen"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
         minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" wrapText="true">
         <font>
            <Font name="Arial" size="16.0" />
         </font>
      </Button>
      <Button fx:id="Auswahl3" layoutX="20.0" layoutY="250.0" text="Auswahl3"
         onAction="#antwortAuswaehlen"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
         minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" wrapText="true">
         <font>
            <Font name="Arial" />
         </font>
      </Button>
      <Button fx:id="Auswahl4" layoutX="330.0" layoutY="250.0" text="Auswahl4"
         onAction="#antwortAuswaehlen"
         style="-fx-background-color: #6495ED; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
         minWidth="200" minHeight="50" maxWidth="200" maxHeight="50" wrapText="true">
         <font>
            <Font name="Arial" />
         </font>
      </Button>
      <Button fx:id="ErgebnisButton" layoutX="310.0" layoutY="350.0" text="Ergebnisse"
         onAction="#switchToThird"
         style="-fx-background-color: #ADFF2F; -fx-background-radius: 32px; -fx-border-radius: 32px;"
         textFill="WHITE"
      >
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Button>
      <Button fx:id="exitButton" layoutX="460.0" layoutY="350.0" text="Beenden"
         onAction="#handleExitButtonAction"
         style="-fx-background-color:#B22222; -fx-background-radius: 32px;; -fx-border-radius: 32px;"
         textFill="WHITE">
         <font>
            <Font name="Arial" size="20.0" />
         </font>
      </Button>
   </children>
</AnchorPane>